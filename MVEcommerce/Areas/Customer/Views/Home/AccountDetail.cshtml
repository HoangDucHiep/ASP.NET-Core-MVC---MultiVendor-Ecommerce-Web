
@{
    ViewData["Title"] = "AccountDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MVEcommerce.Models.ApplicationUser


<style>
    /* General Reset */
 
    .container123 {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Sidebar */
    .sidebar123 {
        width: 250px;
        background: #fff;
        border-right: 1px solid #ddd;
        padding: 20px;
        height: 100vh;
    }

    .account-wrapper123{
        display: flex;
    }

    .profile123 {
        text-align: center;
        margin-bottom: 30px;
    }

    .avatar123 {
        width: 80px;
        height: 80px;
        background: #ccc;
        border-radius: 50%;
        margin: 0 auto 10px;
    }

    h3 {
        font-size: 16px;
        margin: 0;
    }

    .menu123 {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .menu123 li {
            margin: 15px 0;
        }

        .menu123 a {
            text-decoration: none;
            color: #333;
            font-size: 14px;
            display: block;
            padding: 5px 10px;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

            .menu123 a:hover {
                background: #f0f0f0;
            }

            .menu123 a.active123 {
                font-weight: bold;
                background: #ddd;
            }

    /* Main Content */
    .main-content123 {
        flex-grow: 1;
        padding: 20px;
        background: #fff;
        margin-left: 20px;
        border-radius: 5px;
    }

    h2 {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .form-group123 {
        margin-bottom: 15px;
    }

    label {
        font-size: 14px;
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

        input[type="email"],
        input[type="password"] {
            color: #333;
        }

    .hint123 {
        font-size: 12px;
        color: #999;
        margin-top: 5px;
    }

    .form-actions123 {
        text-align: right;
    }

    button {
        background: #000;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        button:hover {
            background: #444;
        }

</style>


    <div class="container123">
        <div class="account-wrapper123">
            <!-- Sidebar -->
            <aside class="sidebar123">
                <div class="profile123">
                    <div class="avatar123"></div>
                    <h3>Hello!</h3>
                    <p>@Model.UserName</p>
                </div>
                <ul class="menu123">
                    <li><a asp-controller="Home" asp-action="AccounntOverview" ><i class="fa fa-home"></i> Dashboard</a></li>
                    <li><a asp-controller="Home" asp-action="Order"><i class="fa fa-shopping-bag"></i> Orders</a></li>

                    <li><a asp-controller="Home" asp-action="Addresses"><i class="fa fa-address-book"></i> Addresses</a></li>
                    <li><a asp-controller="Home" asp-action="AccountDetail" class="active123"><i class="fa fa-user"></i> Account details</a></li>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li>
                        <form id="logoutForm" class="form-inline account-panel__link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <a class="motta-button motta-button--text">
                                <button type="submit" style="border: none; background: transparent; color: black; margin: 0; padding: 0; min-width: auto !important;">
                                    <span class="motta-button__icon" style="display: inline-block; padding: 0; margin: 0; line-height: normal; vertical-align: middle; text-align: left;">
                                        <span class="motta-svg-icon motta-svg-icon--sign-out" style="display: inline-block; padding: 0; margin: 0; line-height: normal; vertical-align: middle; min-width: auto !important;">
                                            <svg width="24" height="24" aria-hidden="true" role="img" focusable="false" viewBox="0 0 32 32" style="min-width: auto !important;">
                                                <path d="M16 25.6h-9.6v-19.2h9.6v3.2h3.2v-6.4h-16v25.6h16v-6.4h-3.2z"></path>
                                                <path d="M28.8 16l-6.4-5.6v4h-11.2v3.2h11.2v4z"></path>
                                            </svg>
                                        </span>
                                    </span>
                                    <span class="motta-button__text" style="display: inline-block; padding: 0; margin: 0; line-height: normal; vertical-align: middle;">
                                        Sign Out
                                    </span>
                                </button>
                            </a>
                        </form>
                    </li>
                }
                </ul>
            </aside>

            <!-- Main Content -->
            <main class="main-content123">
                <h2>Account Details</h2>
                <form method="post" asp-action="AccountDetail" class="account-form123">
                    <input hidden asp-for="@Model.Id" >
                    <div class="form-group123">
                        <label asp-for="FullName">Full name <span class="required123">*</span></label>
                        <input type="text" asp-for="FullName" value="@Model.FullName" required>
                    </div>
                    <div class="form-group123">
                        <label asp-for="UserName">Username <span class="required123">*</span></label>
                        <input type="text" asp-for="UserName" value="@Model.UserName" required>
                        <p class="hint123">This will be how your name will be displayed in the account section and in reviews</p>
                    </div>
                    <div class="form-group123">
                        <label asp-for="Email">Email address <span class="required123">*</span></label>
                        <input type="email" asp-for="Email" value="@Model.Email" required>
                    </div>
                <div class="form-group123">
                    <label asp-for="PhoneNumber">Phone number <span class="required123">*</span></label>
                    <input type="number" asp-for="PhoneNumber" value="@Model.PhoneNumber" required>
                </div>
                    <div class="form-actions123">
                        <button type="submit">Save changes</button>
                    </div>
                </form>

                <h2>Password Change</h2>
                <form class="password-form123">
                    <div class="form-group123">
                        <label for="current-password">Current Password</label>
                        <input type="password" id="current-password" name="current-password" required>
                    </div>
                    <div class="form-group123">
                        <label for="new-password">New Password</label>
                        <input type="password" id="new-password" name="new-password" required>
                    </div>
                    <div class="form-group123">
                        <label for="confirm-password">Confirm New Password</label>
                        <input type="password" id="confirm-password" name="confirm-password" required>
                    </div>
                    <div class="form-actions123">
                        <button type="submit">Save changes</button>
                    </div>
                </form>
            </main>
        </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    </div>

  