@using MVEcommerce.Models
@using MVEcommerce.Utility
@model IEnumerable<Order>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_VendorPageLayout";
}


<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row align-items-center mb-3">
            <div class="col-sm mb-2 mb-sm-0">
                <h1 class="page-header-title">
                    Orders Management
                </h1>
            </div>
            <!-- End Col -->
        </div>
        <!-- End Row -->
        <!-- Nav Scroller -->
        <div class="js-nav-scroller hs-nav-scroller-horizontal">
            <span class="hs-nav-scroller-arrow-prev" style="display: none;">
                <a class="hs-nav-scroller-arrow-link" href="javascript:;">
                    <i class="bi-chevron-left"></i>
                </a>
            </span>

            <span class="hs-nav-scroller-arrow-next" style="display: none;">
                <a class="hs-nav-scroller-arrow-link" href="javascript:;">
                    <i class="bi-chevron-right"></i>
                </a>
            </span>

            <!-- Nav -->
            <ul class="nav nav-tabs page-header-tabs" id="pageHeaderTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" href="javascript:void(0)" 
                    onclick="loadOrders('all')">All Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:void(0)" 
                    onclick="loadOrders('Pending')">Pending</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:void(0)" 
                    onclick="loadOrders('Approved')">Approved</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:void(0)" 
                    onclick="loadOrders('Completed')">Completed</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:void(0)" 
                    onclick="loadOrders('Cancelled', 'Rejected')">Cancelled</a>
                </li>
            </ul>
            <!-- End Nav -->
        </div>
        <!-- End Nav Scroller -->
    </div>
    <!-- End Page Header -->
    <!-- End Row -->
    <!-- Card -->
    <div class="card" id="ordersContainer">
        @await Html.PartialAsync("_VendorOrderIndexAjaxPartial", Model)
    </div>
    <!-- End Card -->
</div>


<script>
function loadOrders(status) {
    // Update active tab
    document.querySelectorAll('#pageHeaderTab .nav-link').forEach(link => {
        link.classList.remove('active');
    });
    event.target.classList.add('active');

    // Make AJAX call
    $.ajax({
        url: '@Url.Action("GetFilteredOrders", "OrderManagement")',
        type: 'GET',
        data: { status: status },
        success: function(response) {
            $('#ordersContainer').html(response);
            initializePlugins();
        },
        error: function(error) {
            console.log(error);
        }
    });
}

$(document).ready(function() {
    initializePlugins();
});

function initializePlugins() {
    $('#datatable').DataTable({
    });

    $('#datatableSearch').on('input', function() {
        $('#datatable').DataTable().search($(this).val()).draw();
    });
}
</script>