@using MVEcommerce.Models.ViewModels.VendorProduct
@model VendorAddProductVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_VendorPageLayout";
}

<div class="content container-fluid">
    <div class="row align-items-center">
        <div class="col-sm mb-2 mb-sm-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-no-gutter">
                    <li class="breadcrumb-item"><a class="breadcrumb-link" href="@Url.Action("Index", "Product")">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add Product</li>
                </ol>
            </nav>

            <h1 class="page-header-title">Add Product</h1>

            <div class="mt-2">
                <a class="text-body me-3" href="javascript:;">
                    <i class="bi-clipboard me-1"></i> Duplicate
                </a>
                <a class="text-body" href="javascript:;">
                    <i class="bi-eye me-1"></i> Preview
                </a>
            </div>
        </div>
        <!-- End Col -->
    </div>
    <!-- End Row -->

    <form asp-action="AddProduct" method="post">
        <div class="row">
            <div class="col-lg-8 mb-3 mb-lg-0">
                <!-- Card -->
                <div class="card mb-3 mb-lg-5">
                    <!-- Header -->
                    <div class="card-header">
                        <h4 class="card-header-title">Product information</h4>
                    </div>
                    <div asp-validation-summary="ModelOnly" style="color: #e22525;" role="alert"></div>
                    <!-- End Header -->
                    <!-- Body -->
                    <div class="card-body">
                        <!-- Form -->
                        <div class="mb-4">
                            <label asp-for="Product.Name" class="form-label">Name <i class="bi-question-circle text-body ms-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Products are the goods or services you sell."></i></label>
                            <input type="text" class="form-control" asp-for="Product.Name" placeholder="Shirt, t-shirts, etc." aria-label="Shirt, t-shirts, etc.">
                        </div>
                        <!-- End Form -->

                        <div class="row">
                            <div class="col-sm-6">
                                <!-- Form -->
                                <div class="mb-4">
                                    <label asp-for="Product.SKU" class="form-label">SKU</label>
                                    <input type="text" class="form-control" asp-for="Product.SKU" placeholder="eg. 348121032" aria-label="eg. 348121032">
                                </div>
                                <!-- End Form -->
                            </div>
                            <!-- End Col -->

                            <div class="col-sm-6">
                                <!-- Form -->
                                <div class="mb-4">
                                    <label for="categoryLabel" class="form-label">Category</label>
                                    <!-- Select -->
                                    <div class="tom-select-custom">
                                        <select asp-for="Product.CategoryId" asp-items="@Model.Categories" class="js-select form-select" id="categoryLabel" data-hs-tom-select-options='{
                                        "searchInDropdown": false,
                                        "hideSearch": true,
                                        "placeholder": "Select category"
                                      }'>
                                        </select>
                                    </div>
                                    <!-- End Select -->
                                </div>
                                <!-- Form -->
                            </div>
                            <!-- End Col -->
                        </div>
                        <!-- End Row -->

                        <!-- Add product variants and options here -->
                        <div id="variants">
                            <h4>Variants</h4>
                            <div id="variant-list">
                                @for (int i = 0; i < Model.variantOptions.Count; i++)
                                {
                                    var variant = Model.variantOptions.ElementAt(i).Key;
                                    var options = Model.variantOptions.ElementAt(i).Value;
                                    <div class="variant-item mb-4">
                                        <div class="mb-4">
                                            <label class="form-label">Variant Name</label>
                                            <input type="text" class="form-control" name="variantOptions[@i].Key.Name" value="@variant.Name" />
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Options</label>
                                            <div id="option-list-@i">
                                                @for (int j = 0; j < options.Count; j++)
                                                {
                                                    var option = options[j];
                                                    <div class="option-item row mb-3">
                                                        <input type="hidden" name="variantOptions[@i].Value[@j].VariantId" value="@variant.VariantId" />
                                                        <div class="col-md-3 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" name="variantOptions[@i].Value[@j].Value" value="@option.Value" placeholder="Option Value" />
                                                        </div>
                                                        <div class="col-md-3 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" name="variantOptions[@i].Value[@j].Price" value="@option.Price" placeholder="Option Price" />
                                                        </div>
                                                        <div class="col-md-3 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" name="variantOptions[@i].Value[@j].Stock" value="@option.Stock" placeholder="Option Stock" />
                                                        </div>
                                                        <div class="col-md-3 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" name="variantOptions[@i].Value[@j].SKU" value="@option.SKU" placeholder="Option SKU" />
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <button type="button" class="btn btn-secondary" onclick="addOption(@i)">Add Option</button>
                                        </div>
                                        <hr />
                                    </div>
                                }
                            </div>
                            <button type="button" class="btn btn-secondary" onclick="addVariant()">Add Variant</button>
                        </div>
                    </div>
                    <!-- Body -->
                </div>
                <!-- End Card -->
            </div>
            <!-- End Col -->

            <div class="col-lg-4">
                <!-- Card -->
                <div class="card mb-3 mb-lg-5">
                    <!-- Header -->
                    <div class="card-header">
                        <h4 class="card-header-title">Pricing</h4>
                    </div>
                    <!-- End Header -->
                    <!-- Body -->
                    <div class="card-body">
                        <!-- Form -->
                        <div class="mb-4">
                            <label asp-for="@Model.Product.Price" class="form-label">Price</label>
                            <input type="text" class="form-control" asp-for="@Model.Product.Price" placeholder="0.00" aria-label="0.00">
                        </div>
                        <!-- End Form -->

                        <!-- Form -->
                        <div class="mb-4">
                            <label asp-for="@Model.Product.Sale" class="form-label">Sale</label>
                            <input type="text" class="form-control" asp-for="@Model.Product.Sale" placeholder="0.00" aria-label="0.00" value="0.0">
                        </div>
                        <!-- End Form -->
                    </div>
                    <!-- Body -->
                </div>
                <!-- End Card -->
            </div>
            <!-- End Col -->

            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function addVariant() {
            var variantIndex = document.querySelectorAll('.variant-item').length;
            var variantHtml = `
                <div class="variant-item mb-4">
                    <div class="mb-4">
                        <label class="form-label">Variant Name</label>
                        <input type="text" class="form-control" name="variantOptions[${variantIndex}].Key.Name" />
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Options</label>
                        <div id="option-list-${variantIndex}"></div>
                        <button type="button" class="btn btn-secondary" onclick="addOption(${variantIndex})">Add Option</button>
                    </div>
                    <hr />
                </div>`;
            document.getElementById('variant-list').insertAdjacentHTML('beforeend', variantHtml);
        }

        function addOption(variantIndex) {
            var optionIndex = document.querySelectorAll(`#option-list-${variantIndex} .option-item`).length;
            var optionHtml = `
                <div class="option-item row mb-3">
                    <input type="hidden" name="variantOptions[${variantIndex}].Value[${optionIndex}].VariantId" value="${variantIndex}" />
                    <div class="col-md-3 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="variantOptions[${variantIndex}].Value[${optionIndex}].Value" placeholder="Option Value" />
                    </div>
                    <div class="col-md-3 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="variantOptions[${variantIndex}].Value[${optionIndex}].Price" placeholder="Option Price" />
                    </div>
                    <div class="col-md-3 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="variantOptions[${variantIndex}].Value[${optionIndex}].Stock" placeholder="Option Stock" />
                    </div>
                    <div class="col-md-3 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="variantOptions[${variantIndex}].Value[${optionIndex}].SKU" placeholder="Option SKU" />
                    </div>
                </div>`;
            document.getElementById(`option-list-${variantIndex}`).insertAdjacentHTML('beforeend', optionHtml);
        }
    </script>
}