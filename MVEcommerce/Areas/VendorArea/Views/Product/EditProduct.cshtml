@using MVEcommerce.Models.ViewModels.VendorProduct
@model VendorEditProductVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_VendorPageLayout";
}

<div class="content container-fluid">
    <div class="row align-items-center">
        <div class="col-sm mb-2 mb-sm-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-no-gutter">
                    <li class="breadcrumb-item"><a class="breadcrumb-link" href="@Url.Action("Index", "Product")">Products</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Product</li>
                </ol>
            </nav>

            <h1 class="page-header-title">Edit Product</h1>

            <div class="mt-2">
                <a class="text-body me-3" href="javascript:;">
                    <i class="bi-clipboard me-1"></i> Duplicate
                </a>
                <a class="text-body" href="javascript:;">
                    <i class="bi-eye me-1"></i> Preview
                </a>
            </div>
        </div>
        <!-- End Col -->
    </div>
    <!-- End Row -->

    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Product.ProductId" />
        <input type="hidden" asp-for="Product.VendorId" />

        <div class="row">
            <div class="col-lg-8 mb-3 mb-lg-0">
                <!-- Card -->
                <div class="card mb-3 mb-lg-5">
                    <!-- Header -->
                    <div class="card-header">
                        <h4 class="card-header-title">Product information</h4>
                    </div>
                    <div asp-validation-summary="ModelOnly" style="color: #e22525;" role="alert"></div>
                    <!-- End Header -->
                    <!-- Body -->
                    <div class="card-body">
                        <!-- Form -->
                        <div class="mb-4">
                            <label asp-for="Product.Name" class="form-label">Name <i class="bi-question-circle text-body ms-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Products are the goods or services you sell."></i></label>
                            <input type="text" class="form-control" asp-for="Product.Name" placeholder="Shirt, t-shirts, etc." aria-label="Shirt, t-shirts, etc.">
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                        <!-- End Form -->

                        <div class="row">
                            <div class="col-sm-6">
                                <!-- Form -->
                                <div class="mb-4">
                                    <label asp-for="Product.SKU" class="form-label">SKU</label>
                                    <input type="text" class="form-control" asp-for="Product.SKU" placeholder="eg. 348121032" aria-label="eg. 348121032">
                                    <span asp-validation-for="Product.SKU" class="text-danger"></span>
                                </div>
                                <!-- End Form -->
                            </div>
                            <!-- End Col -->

                            <div class="col-sm-6">
                                <!-- Form -->
                                <div class="mb-4">
                                    <label for="categoryLabel" class="form-label">Category</label>
                                    <!-- Select -->
                                    <div class="tom-select-custom">
                                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.Categories" class="js-select form-select" id="categoryLabel" data-hs-tom-select-options='{
                                        "searchInDropdown": false,
                                        "hideSearch": true,
                                        "placeholder": "Select category"
                                      }'>
                                        </select>
                                    </div>
                                    <!-- End Select -->
                                </div>
                                <!-- Form -->
                            </div>
                            <!-- End Col -->
                        </div>
                        <!-- End Row -->

                        <div class="row">
                            <textarea id="editor" class="form-control" asp-for="@Model.Product.Description"></textarea>
                        </div>

                        <!-- Add product variants and options here -->
                        <div id="variants">
                            <h4>Variants</h4>
                            <button type="button" class="btn btn-secondary mb-3" id="toggleVariantButton" onclick="toggleVariantInput()">Add Variant</button>
                            <div id="variant-list" style="display: none;">
                                @if (Model?.ProductVariantOptions?.Count > 0)
                                {
                                    <div class="variant-item mb-4">
                                        <div class="mb-4" id="variant">
                                            <label class="form-label">Variant Name</label>
                                            <input type="text" class="form-control" asp-for="ProductVariant.Name" />
                                            <input type="hidden" asp-for="ProductVariant.VariantId" />
                                            <input type="hidden" class="form-control" asp-for="ProductVariant.ProductId" />
                                            <span class="text-danger variant-name-error"></span>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Options</label>
                                            <div id="option-list">
                                                @for (int j = 0; j < Model.ProductVariantOptions.Count; j++)
                                                {
                                                    var option = Model.ProductVariantOptions[j];
                                                    <div class="option-item row mb-3">
                                                        <input type="hidden" asp-for="ProductVariantOptions[@j].OptionId" />
                                                        <input type="hidden" asp-for="ProductVariantOptions[@j].VariantId" value="@Model.ProductVariant.VariantId" />
                                                        <div class="col-md-2 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" asp-for="ProductVariantOptions[@j].Value" placeholder="Option Value" />
                                                        </div>
                                                        <div class="col-md-2 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" asp-for="ProductVariantOptions[@j].Price" placeholder="Option Price" />
                                                        </div>
                                                        <div class="col-md-2 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" asp-for="ProductVariantOptions[@j].Stock" placeholder="Option Stock" />
                                                        </div>
                                                        <div class="col-md-2 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" asp-for="ProductVariantOptions[@j].SKU" placeholder="Option SKU" />
                                                        </div>
                                                        <div class="col-md-2 mb-2 mb-md-0">
                                                            <input type="text" class="form-control" asp-for="ProductVariantOptions[@j].Sale" placeholder="Option Sale" />
                                                        </div>
                                                    </div>

                                                    <div class="row mb-3">
                                                        <div class="col-12">
                                                            <div class="mb-4">
                                                                <label class="form-label">Option Images</label>

                                                                <div id="optionImagesPreview_@j" class="d-flex flex-wrap gap-2 mb-2">

                                                                    <!-- Image previews will be added here -->
                                                                    @if (option != null && option.ProductImages != null && option.ProductImages.Count != 0)
                                                                    {
                                                                        @foreach (var image in option.ProductImages)
                                                                        {
                                                                            <div style="position: relative; width: 100px; height: 100px;">
                                                                                <img src="@image.ImageUrl" style="width: 100%; height: 100%; object-fit: cover; border-radius: 5px;" />
                                                                                <button type="button" class="btn btn-sm btn-danger position-absolute" style="top: 5px; right: 5px; padding: 0 6px;" onclick="removeExistingImage('@image.ImageId', this)">×</button>
                                                                            </div>
                                                                        }
                                                                    }
                                                                </div>

                                                                <input type="file" class="form-control" multiple accept="image/*" onchange="previewOptionImages(event, @j)" name="optionImages[@j]" id="optionImages_@j"/>

                                                            </div>

                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <button type="button" class="btn btn-secondary" onclick="addOption()">Add Option</button>
                                        </div>
                                        <hr />
                                    </div>
                                }
                            </div>
                        </div>
                    
                    </div>
                    <!-- Body -->
                </div>
                <!-- End Card -->
            </div>
            <!-- End Col -->

            <div class="col-lg-4">
                <!-- Card -->
                <div class="card mb-3 mb-lg-5" id="product-price-sale-stocks">
                    <!-- Header -->
                    <div class="card-header">
                        <h4 class="card-header-title">Pricing</h4>
                    </div>
                    <!-- End Header -->
                    <!-- Body -->
                    <div class="card-body">
                        <!-- Form -->
                        <div class="mb-4">
                            <label asp-for="Product.Price" class="form-label">Price</label>
                            <input type="text" class="form-control" asp-for="Product.Price" placeholder="0.00" aria-label="0.00">
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                            <span id="productPriceValidate" class="text-danger" style="display: none;">Price is required.</span>
                        </div>
                        <!-- End Form -->

                        <!-- Form -->
                        <div class="mb-4">
                            <label asp-for="Product.Sale" class="form-label">Sale</label>
                            <input type="text" class="form-control" asp-for="Product.Sale" placeholder="0.00" aria-label="0.00" value="0.0">
                            <span asp-validation-for="Product.Sale" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Product.Stock" class="form-label">Stocks</label>
                            <input type="text" class="form-control" asp-for="Product.Stock" placeholder="0.00" aria-label="0.00" value="1" required>
                            <span asp-validation-for="Product.Stock" class="text-danger"></span>
                        </div>
                        <!-- End Form -->
                    </div>
                    <!-- Body -->
                </div>

                <!-- Product Images Section -->
                <div class="card mb-3 mb-lg-5">
                    <div class="card-header">
                        <h4 class="card-header-title">Product Images</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">Main Image</label>
                            <div class="main-image-preview" style="margin-bottom: 10px;">
                                <div id="mainImageContainer" style="position: relative; width: 200px;">
                                    <img id="mainImagePreview" src="@Model.Product.ProductImages.FirstOrDefault(i => i.IsMain)?.ImageUrl" alt="Main image preview" style="width: 100%; height: auto;"/>
                                </div>
                            </div>
                            <input type="file" id="mainImage" name="mainImage" class="form-control" accept="image/*" 
                                onchange="previewMainImage(event)"/>
                            <span id="mainImageError" class="text-danger" style="display: none;">Main image is required.</span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Additional Images</label>
                            <div id="additionalImagesPreview" class="d-flex flex-wrap gap-2 mb-2">
                                <!-- Image previews will be added here -->
                                @if (Model.Product.ProductImages != null && Model.Product.ProductImages.Count > 1)
                                {
                                    @foreach (var image in Model.Product.ProductImages.Where(i => !i.IsMain))
                                    {
                                        <div style="position: relative; width: 100px; height: 100px;">
                                            <img src="@image.ImageUrl" style="width: 100%; height: 100%; object-fit: cover; border-radius: 5px;" />
                                            <button type="button" class="btn btn-sm btn-danger position-absolute" style="top: 5px; right: 5px; padding: 0 6px;" onclick="removeExistingImage('@image.ImageId', this)">×</button>
                                        </div>
                                    }
                                }
                            </div>
                            <input type="file" id="additionalImages" name="additionalImages" multiple class="form-control" 
                                accept="image/*" onchange="previewAdditionalImages(event)"/>
                        </div>
                    </div>
                </div>
                <!-- End Card -->
            </div>
            <!-- End Col -->

            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {

    @* VAlidate *@
    <script>
        document.querySelector('form').addEventListener('submit', function(event) {
            if (!validateForm()) {
                event.preventDefault();
            }
        });

        function validateForm() {
            let isValid = true;

            // Validate Variant Name
            const variantNameInput = document.querySelector('input[name="ProductVariant.Name"]');
            const variantNameError = document.querySelector('.variant-name-error');

            if (!variantNameInput.value.trim()) {
                variantNameInput.classList.add('is-invalid');
                variantNameError.innerText = 'Variant Name is required.';
                isValid = false;
            } else {
                variantNameInput.classList.remove('is-invalid');
                variantNameError.innerText = '';
            }

            // Validate variant options
            const options = document.querySelectorAll('.option-item');
            options.forEach(option => {
                const valueInput = option.querySelector('input[name*="Value"]');
                const priceInput = option.querySelector('input[name*="Price"]');
                const stockInput = option.querySelector('input[name*="Stock"]');
                const skuInput = option.querySelector('input[name*="SKU"]');
                const saleInput = option.querySelector('input[name*="Sale"]');

                if (!valueInput.value.trim()) {
                    valueInput.classList.add('is-invalid');
                    const errorSpan = valueInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                    valueInput.insertAdjacentHTML('afterend', '<span class="text-danger">Option value is required.</span>');
                    isValid = false;
                } else {
                    valueInput.classList.remove('is-invalid');
                    const errorSpan = valueInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                }

                if (!priceInput.value.trim() || isNaN(priceInput.value) || Number(priceInput.value) <= 0) {
                    priceInput.classList.add('is-invalid');
                    const errorSpan = priceInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                    priceInput.insertAdjacentHTML('afterend', '<span class="text-danger">Price must be a number greater than 0.</span>');
                    isValid = false;
                } else {
                    priceInput.classList.remove('is-invalid');
                    const errorSpan = priceInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                }

                if (!stockInput.value.trim() || isNaN(stockInput.value) || Number(stockInput.value) <= 0) {
                    stockInput.classList.add('is-invalid');
                    const errorSpan = stockInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                    stockInput.insertAdjacentHTML('afterend', '<span class="text-danger">Stock must be a number greater than 0.</span>');
                    isValid = false;
                } else {
                    stockInput.classList.remove('is-invalid');
                    const errorSpan = stockInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                }

                if (!skuInput.value.trim()) {
                    skuInput.classList.add('is-invalid');
                    const errorSpan = skuInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                    skuInput.insertAdjacentHTML('afterend', '<span class="text-danger">SKU is required.</span>');
                    isValid = false;
                } else {
                    skuInput.classList.remove('is-invalid');
                    const errorSpan = skuInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                }

                if (!saleInput.value.trim() || isNaN(saleInput.value) || Number(saleInput.value) < 0 || Number(saleInput.value) > 100) {
                    saleInput.classList.add('is-invalid');
                    const errorSpan = saleInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                    saleInput.insertAdjacentHTML('afterend', '<span class="text-danger">Sale must be a number between 0 and 100.</span>');
                    isValid = false;
                } else {
                    saleInput.classList.remove('is-invalid');
                    const errorSpan = saleInput.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('text-danger')) {
                        errorSpan.remove();
                    }
                }
            });

            return isValid;
        }
    </script>


    <script>

        document.addEventListener("DOMContentLoaded", function() {
            // Show variant input if there are existing variants
            if (@Model.ProductVariantOptions.Count > 0) {
                document.getElementById('variant-list').style.display = 'block';
            }
        });


        function showVariantInput() {
            document.getElementById('variant-list').style.display = 'block';
        }

        function toggleVariantInput() {
            var variantList = document.getElementById('variant-list');
            var toggleButton = document.getElementById('toggleVariantButton');
            var productInfor = document.getElementById('product-price-sale-stocks');
            if (variantList.style.display === 'none') {
                variantList.style.display = 'block';
                productInfor.style.display = 'none';
                toggleButton.innerText = 'Remove Variant';
                variantList.innerHTML = `
                    <div class="variant-item mb-4">
                        <div class="mb-4" id="variant">
                            <label class="form-label">Variant Name</label>
                            <input type="text" class="form-control" name="ProductVariant.Name" />
                            <input type="hidden" class="form-control" asp-for="@Model.ProductVariant.ProductId" value="@Model.Product.ProductId"/>
                            <span class="text-danger variant-name-error"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label">Options</label>
                            <div id="option-list"></div>
                            <button type="button" class="btn btn-secondary" onclick="addOption()">Add Option</button>
                        </div>
                        <hr />
                    </div>`;
                addOption();
            } else {
                variantList.style.display = 'none';
                productInfor.style.display = 'block';
                toggleButton.innerText = 'Add Variant';
                variantList.innerHTML = ''; // Clear the variant list content
                // Reinitialize the variant list content
            }
        }

        function addOption() {
            var optionIndex = document.querySelectorAll('#option-list .option-item').length;

            console.log("Option Index: " + optionIndex);

            var optionHtml = `
                <div class="option-item row mb-3">
                    <input type="hidden" asp-for="ProductVariantOptions[${optionIndex}].OptionId" />
                    <input type="hidden" asp-for="ProductVariantOptions[${optionIndex}].VariantId" value="@Model.ProductVariant.VariantId" />
                    <div class="col-md-2 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="ProductVariantOptions[${optionIndex}].Value" placeholder="Option Value" />
                    </div>
                    <div class="col-md-2 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="ProductVariantOptions[${optionIndex}].Price" placeholder="Option Price" />
                    </div>
                    <div class="col-md-2 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="ProductVariantOptions[${optionIndex}].Stock" placeholder="Option Stock" />
                    </div>
                    <div class="col-md-2 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="ProductVariantOptions[${optionIndex}].SKU" placeholder="Option SKU" />
                    </div>
                    <div class="col-md-2 mb-2 mb-md-0">
                        <input type="text" class="form-control" name="ProductVariantOptions[${optionIndex}].Sale" placeholder="Option Sale" Value="0"/>
                    </div>
                    <div class="col-md-2 text-end">
                        <button type="button" class="btn btn-danger" onclick="removeOption(this)">Remove</button>
                    </div>
                    <div class="col-12">
                        <div class="mb-4">
                            <label class="form-label">Option Images</label>
                            <div id="optionImagesPreview_${optionIndex}" class="d-flex flex-wrap gap-2 mb-2">
                            </div>
                            <input type="file" class="form-control" multiple accept="image/*" onchange="previewOptionImages(event, ${optionIndex})" name="optionImages[${optionIndex}]" id="optionImages_${optionIndex}" />
                        </div>
                    </div>
                </div>`;
            document.getElementById('option-list').insertAdjacentHTML('beforeend', optionHtml);
        }

        function removeOption(button) {
            button.closest('.option-item').remove();
        }

    </script>

